    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.esa.snap</groupId>
        <artifactId>snap-idepix</artifactId>
        <version>8.0.0</version>
    </parent>

    <artifactId>idepix-meris</artifactId>
    <version>8.0.0</version>

    <packaging>nbm</packaging>
    
    <name>IdePix MERIS</name>
