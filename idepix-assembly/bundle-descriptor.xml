<bundleDescriptor>
    <bundleName>snap-buildin</bundleName>
    <bundleVersion>1.6</bundleVersion>

    <processorDescriptors>
        <processorDescriptor>
            <processorName>Idepix for PROBA-V</processorName>
            <processorVersion>3.0</processorVersion>
            <executableName>Idepix.Probav.Vegetation</executableName>
            <parameterDescriptors>
                <parameterDescriptor>
                    <name>copyToaReflectances</name>
                    <type>boolean</type>
                    <description>Write TOA reflectances to the target product</description>
                    <defaultValue>false</defaultValue>
                </parameterDescriptor>
                <parameterDescriptor>
                    <name>copyAnnotations</name>
                    <type>boolean</type>
                    <description>Write input annotation bands to the target product</description>
                    <defaultValue>false</defaultValue>
                </parameterDescriptor>
                <parameterDescriptor>
                    <name>copyFeatureValues</name>
                    <type>boolean</type>
                    <description>Write feature values to the target product</description>
                    <defaultValue>false</defaultValue>
                </parameterDescriptor>
                <parameterDescriptor>
                    <name>applySchillerNN</name>
                    <type>boolean</type>
                    <description>Apply NN for cloud classification</description>
                    <defaultValue>false</defaultValue>
                </parameterDescriptor>
                <parameterDescriptor>
                    <name>schillerNNCloudAmbiguousLowerBoundaryValue</name>
                    <type>double</type>
                    <description>NN cloud ambiguous lower boundary</description>
                    <defaultValue>1.1</defaultValue>
                </parameterDescriptor>
                <parameterDescriptor>
                    <name>schillerNNCloudAmbiguousSureSeparationValue</name>
                    <type>double</type>
                    <description>NN cloud ambiguous/sure separation value</description>
                    <defaultValue>2.7</defaultValue>
                </parameterDescriptor>
                <parameterDescriptor>
                    <name>schillerNNCloudSureSnowSeparationValue</name>
                    <type>double</type>
                    <description>NN cloud ambiguous cloud sure/snow separation value</description>
                    <defaultValue>4.6</defaultValue>
                </parameterDescriptor>
                <parameterDescriptor>
                    <name>computeCloudBuffer</name>
                    <type>boolean</type>
                    <description>Compute a cloud buffer</description>
                    <defaultValue>true</defaultValue>
                </parameterDescriptor>
                <parameterDescriptor>
                    <name>cloudBufferWidth</name>
                    <type>int</type>
                    <description>Width of cloud buffer (# of pixels)</description>
                    <defaultValue>2</defaultValue>
                </parameterDescriptor>
                <parameterDescriptor>
                    <name>useL1bLandWaterFlag</name>
                    <type>boolean</type>
                    <description>Use land-water flag from L1b product instead of SRTM mask</description>
                    <defaultValue>false</defaultValue>
                </parameterDescriptor>
            </parameterDescriptors>

            <outputFormats>NetCDF4,GeoTiff,BigGeoTiff,BEAM-DIMAP,NetCDF</outputFormats>
            <inputProductTypes>PROBAV_S1_TOA</inputProductTypes>
            <outputProductType>PROBAV_L2A</outputProductType>
            <jobConfig>
                <jobParameter>
                    <name>calvalus.calvalus.bundle</name>
                    <value>calvalus-2.18-SNAPSHOT</value>
                </jobParameter>
                <jobParameter>
                    <name>calvalus.snap.bundle</name>
                    <value>snap-7.0.0-rc5</value>
                </jobParameter>
                <jobParameter>
                    <name>calvalus.system.snap.dataio.bigtiff.compression.type</name>
                    <value>LZW</value>
                </jobParameter>
                <jobParameter>
                    <name>calvalus.system.snap.dataio.bigtiff.tiling.width</name>
                    <value>128</value>
                </jobParameter>
                <jobParameter>
                    <name>calvalus.system.snap.dataio.bigtiff.tiling.height</name>
                    <value>128</value>
                </jobParameter>
                <jobParameter>
                    <name>calvalus.output.compression</name>
                    <value>None</value>
                </jobParameter>
                <jobParameter>
                    <name>calvalus.hadoop.mapreduce.map.java.opts</name>
                    <value>-Djava.awt.headless=true -Xmx3072M</value>
                </jobParameter>
                <jobParameter>
                    <name>calvalus.hadoop.mapreduce.map.memory.mb</name>
                    <value>4096</value>
                </jobParameter>
                <jobParameter>
                    <name>calvalus.hadoop.mapreduce.task.timeout</name>
                    <value>1800000</value>
                </jobParameter>
            </jobConfig>
        </processorDescriptor>

        <processorDescriptor>
            <processorName>Idepix for AVHRR</processorName>
            <processorVersion>3.0</processorVersion>
            <executableName>Idepix.Noaa.Avhrr</executableName>
            <parameterDescriptors>
                <parameterDescriptor>
                    <name>copyRadiances</name>
                    <type>boolean</type>
                    <description>Copy input radiance/reflectance bands.</description>
                    <defaultValue>true</defaultValue>
                </parameterDescriptor>
                <parameterDescriptor>
                    <name>copyGeometries</name>
                    <type>boolean</type>
                    <description>Copy geometry bands.</description>
                    <defaultValue>true</defaultValue>
                </parameterDescriptor>
                <parameterDescriptor>
                    <name>computeCloudBuffer</name>
                    <type>boolean</type>
                    <description>Compute a cloud buffer.</description>
                    <defaultValue>true</defaultValue>
                </parameterDescriptor>
                <parameterDescriptor>
                    <name>cloudBufferWidth</name>
                    <type>string</type>
                    <description>Width of cloud buffer (# of pixels).</description>
                    <defaultValue>2</defaultValue>
                </parameterDescriptor>
                <parameterDescriptor>
                    <name>avhrrNNCloudAmbiguousLowerBoundaryValue</name>
                    <type>string</type>
                    <description>NN cloud ambiguous lower boundary.</description>
                    <defaultValue>2.15</defaultValue>
                </parameterDescriptor>
                <parameterDescriptor>
                    <name>avhrrNNCloudAmbiguousSureSeparationValue</name>
                    <type>string</type>
                    <description>NN cloud ambiguous cloud ambiguous/sure separation value.</description>
                    <defaultValue>3.45</defaultValue>
                </parameterDescriptor>
                <parameterDescriptor>
                    <name>avhrrNNCloudSureSnowSeparationValue</name>
                    <type>string</type>
                    <description>NN cloud ambiguous lower boundary.</description>
                    <defaultValue>4.45</defaultValue>
                </parameterDescriptor>
            </parameterDescriptors>
            <inputProductTypes>AVHRR_L2A</inputProductTypes>
            <outputProductType>AVHRR_L2A</outputProductType>
            <outputFormats>NetCDF4,GeoTiff,BigGeoTiff,BEAM-DIMAP,NetCDF</outputFormats>
            <jobConfig>
                <jobParameter>
                    <name>calvalus.calvalus.bundle</name>
                    <value>calvalus-2.18-SNAPSHOT</value>
                </jobParameter>
                <jobParameter>
                    <name>calvalus.snap.bundle</name>
                    <value>snap-7.0.0-rc5</value>
                </jobParameter>
                <jobParameter>
                    <name>calvalus.system.snap.dataio.bigtiff.compression.type</name>
                    <value>LZW</value>
                </jobParameter>
                <jobParameter>
                    <name>calvalus.system.snap.dataio.bigtiff.tiling.width</name>
                    <value>128</value>
                </jobParameter>
                <jobParameter>
                    <name>calvalus.system.snap.dataio.bigtiff.tiling.height</name>
                    <value>128</value>
                </jobParameter>
                <jobParameter>
                    <name>calvalus.output.compression</name>
                    <value>None</value>
                </jobParameter>
                <jobParameter>
                    <name>calvalus.hadoop.mapreduce.map.java.opts</name>
                    <value>-Djava.awt.headless=true -Xmx3072M</value>
                </jobParameter>
                <jobParameter>
                    <name>calvalus.hadoop.mapreduce.map.memory.mb</name>
                    <value>4096</value>
                </jobParameter>
                <jobParameter>
                    <name>calvalus.hadoop.mapreduce.task.timeout</name>
                    <value>1800000</value>
                </jobParameter>
                <jobParameter>
                    <name>calvalus.hadoop.mapreduce.map.failures.maxpercent</name>
                    <value>5</value>
                </jobParameter>
            </jobConfig>
        </processorDescriptor>
    </processorDescriptors>
</bundleDescriptor>

